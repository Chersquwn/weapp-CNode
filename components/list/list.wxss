.list {
    width: 100%;
    height: 100%;
}

.list_item {
    padding: 26rpx 30rpx;
    border-bottom: 1px solid #e5e5e5;
}

.list_navigator_hover {
    background-color: rgba(3,169,244,.1);
}

.list_item_title {
    display: block;
    width: 100%;
    font-size: 16px;
    font-weight: bold;
    color: #2c3e50;
    line-height: 1.5;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.list_item_content {
    display: flex;
    margin-top: 20rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border: 2px solid #eee;
    border-radius: 50%;
}

.info {
    display: flex;
    flex: 1;
    margin-left: 20rpx;
    font-size: 14px;
}

.avatar_info {
    flex: 2;
}

.browe_info {
    flex: 1;
    text-align: right;
}

.name,
.page_view {
    display: block;
    padding: 3px 0;
    color: #808080;
}

.name {
    font-weight: bold;
}

.time {
    font-size: 12px;
    color: #797979;
}

.list_item_title::before {
    content: '暂无';
    margin-right: 10px;
    margin-top: -3px;
    padding: 5px 6px;
    font-size: 10px;
    font-weight: 400;
    border-radius: 4px;
    background-color: #e7e7e7;
    text-align: center;
    color: #ffffff;
    vertical-align: middle;
}

.top::before {
    content: '置顶';
    background-color: #80bd01;
}

.share::before {
    content: '分享';
    background-color: #d6b668;
    
}

.ask::before {
    content: '问答';
    background-color: #06a7e1;
}

.good::before {
    content: '精华';
    background-color: #5a5ebc;
}

.job::before {
    content: '招聘';
    background-color: #df86a4;
}